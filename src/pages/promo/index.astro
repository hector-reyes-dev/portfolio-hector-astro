---
import Layout from "@layouts/MainLayout.astro";
import Phrase from "@organisms/Phrase.astro";

import Hero from "@features/hero/Hero.astro";
import ProjectGrid from "@organisms/ProjectGrid.astro";
import Services from "@organisms/Services.astro";
import Resources from "@organisms/Resources.astro";
import Contact from "@organisms/Contact.astro";

import { SEO_DESIGN } from "@constants/seo";

const { title, description } = SEO_DESIGN;
---

<Layout
  title={title}
  description={description}
  headerTitle="Tu Sitio Web de Alto Rendimiento"
>
  <main class="w-full m-auto px-2 xl:w-[1024px]">
    <Hero>
      <h1
        slot="main-title"
        class="text-red-light text-2xl text-center md:text-4xl md:text-left"
      >
        Tu Sitio Web de <strong>Alto Rendimiento</strong> .
        <span class="block mt-2 text-base text-balance md:text-xl">
          Garantía de Excelencia en Performance
        </span>
        <p slot="intro" class="mt-4 text-base text-balance">
          Utilizando la última tecnología y un enfoque en el diseño único,
          creamos sitios web que destacan visualmente y brindan una experiencia
          de usuario <strong>excepcional</strong>.
        </p>
      </h1>
      <ProjectGrid />
      <Services />
      <Phrase />
      <Resources />
      <Contact />
    </Hero>
  </main>
</Layout>
