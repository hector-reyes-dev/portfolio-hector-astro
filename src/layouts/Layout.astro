---
import Background from "../components/Background.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta
      name="title"
      content="Héctor Reyes - Desarrollador Front-End con experiencia en UI design"
    />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="¡Hola! Soy Héctor Reyes, un Desarrollador Front-End con experiencia en UI design y diseño de productos digitales.Me apasiona la calidad, la creatividad y la accesibilidad. Estoy listo para aportar valor a proyectos excepcionales. ¡Hagámoslo realidad juntos!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content="Héctor Reyes - Desarrollador Front-End con experiencia en UI design"
    />
    <meta property="og:type" content="article" />
    <meta property="og:url" content=" http://hectorcreative.dev/" />
    <meta
      property="og:image"
      content="https://hectorcreative.dev/assets/resources/awesome-landings-image.png"
    />
    <meta
      property="og:description"
      content="¡Hola! Soy Héctor Reyes, un Desarrollador Front-End con experiencia en UI design y diseño de productos digitales.Me apasiona la calidad, la creatividad y la accesibilidad. Estoy listo para aportar valor a proyectos excepcionales. ¡Hagámoslo realidad juntos!"
    />
    <meta name="author" content="Héctor Reyes" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Background />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --main-gradient: linear-gradient(
      45deg,
      theme("colors.red"),
      theme("colors.orange-light")
    );
    --red-gradient: linear-gradient(
      theme("colors.red"),
      theme("colors.red-light")
    );
    --purple-gradient: linear-gradient(
      theme("colors.purple"),
      theme("colors.purple-light")
    );
    --orange-gradient: linear-gradient(
      theme("colors.orange"),
      theme("colors.orange-light")
    );
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Instrument Sans", sans-serif;
    background-color: theme("colors.white");
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  span {
    color: theme("colors.black");
  }
</style>
