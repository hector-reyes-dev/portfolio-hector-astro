---
import { Image } from "astro:assets";
import foodMoodImg from "@assets/food-mood-mockup.webp";
import comeetCatImg from "@assets/comeet-cat-mockup.webp";
import listsImg from "@assets/lists-mockup.webp";
import watchifyImg from "@assets/watchify-mockup.webp";

const images = [
  {
    img: foodMoodImg,
    alt: "Proyecto Food Mood. Mock up pantalla de inicio.",
    href: "/projects/food-mood",
  },
  {
    img: comeetCatImg,
    alt: "Proyecto Comeet Cat. Mock up pantalla de inicio.",
    href: "#",
  },
  {
    img: listsImg,
    alt: "Proyecto Listas. Mock up pantalla de inicio.",
    href: "/projects/ikni",
  },
  {
    img: watchifyImg,
    alt: "Proyecto Watchify. Mock up pantalla de inicio.",
    href: "#",
  },
];
---

<div
  class="max-w-full p-0 md:pr-8 flex items-start justify-between lg:justify-center xl:justify-between"
>
  {
    images.map(({ img, alt, href }) => (
      <a href={href} class="hero-image">
        <Image src={img} alt={alt} loading="eager" />
      </a>
    ))
  }
</div>

<style>
  .hero-image {
    z-index: 0;
    filter: drop-shadow(10px 10px 15px #22222269);
    animation: move-out;
    animation-duration: 0.3s;
    animation-timing-function: ease-in-out;
    transition-property: z-index, filter;
    transition-duration: 0.1s;
    transition-timing-function: ease-in-out;
    @apply mt-8 mr-[-440px] w-2/6 lg:mr-[-100px] xl:mr-[-800px];
  }

  .hero-image:hover {
    z-index: 10;
    filter: drop-shadow(5px 0px 3px #22222269);
    animation: move-in;
    animation-duration: 0.2s;
    animation-timing-function: ease-in-out;
  }

  .hero-image:last-child {
    animation: none;
    margin-right: 0px;
  }

  .hero-image:last-child:hover {
    z-index: 0;
  }

  @keyframes move-in {
    0% {
      transform: translateX(0px);
    }
    70% {
      transform: translateX(-50px);
    }
    100% {
      transform: translateX(0px);
    }
  }

  @keyframes move-out {
    0% {
      transform: translateX(0px);
    }
    30% {
      transform: translateX(-60px);
    }
    100% {
      transform: translateX(0px);
    }
  }
</style>
