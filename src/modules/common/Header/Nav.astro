---
const menuItems = [
  { title: "Proyectos", to: "/projects", target: "_self" },
  { title: "Servicios", to: "/#servicios", target: "_self" },
  { title: "Recursos", to: "/#recursos", target: "_self" },
  { title: "Contacto", to: "/#contacto", target: "_self" },
  {
    title: "CV",
    to: "https://drive.google.com/file/d/165iYcgf-vW7fIYgcLfBfI8OSzX0B--Ov/view?usp=sharing",
    target: "_blank",
  },
];
---

<nav>
  <ul class="gap-6 hidden md:flex">
    {
      menuItems.map(({ title, to, target }) => (
        <li class="uppercase tracking-widest text-[13px] hover:text-main dark:text-dark-text dark:hover:text-dark-accent transition-colors">
          <a href={to} target={target}>
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
