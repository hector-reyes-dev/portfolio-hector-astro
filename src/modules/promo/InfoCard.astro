---
import {Image} from 'astro:assets'
const { title, description, img, alt, color = "purple" } = Astro.props;
---

<section
  class={`m-2 flex p-4 md:p-8 rounded-3xl bg-${color} flex flex-col-reverse md:flex-row items-center `}
>
  <div class="w-full md:w-2/3 p-6">
    <h3 class="mb-4 text-3xl font-bold text-white">{title}</h3>
    <p class="text-white">{description}</p>
  </div>
  <div class="w-full md:w-1/3">
    <Image src={img} alt={alt} />
    <span class="text-xs text-gray"><a href="https://www.freepik.es/autor/ekayasadesign">Imagen de Ekayasa.Design</a> en Freepik</span>
  </div>
</section>
