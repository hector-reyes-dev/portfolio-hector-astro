---
import { Icon } from "astro-icon/components";

const TITLE = "Contacto";
const DESCRIPTION = "Contactanos si tienes cualquier duda.";
const BUTTONS = [
  { label: "Contacta a Carol", url: "#" },
  { label: "Contacta a HÃ©ctor", url: "#" },
];
---

<section class="w-full pb-20 md:pb-40 flex flex-col md:items-center gap-4">
  <h2 class="title text-4xl md:text-6xl text-wedding-main appear">{TITLE}</h2>
  <p class="w-full md:w-2/3 md:text-center text-balance">
    {DESCRIPTION}
  </p>

  <div
    class="w-full flex flex-col md:flex-row items-center justify-center gap-8"
  >
    {
      BUTTONS.map(({ label, url }) => (
        <a href={url} target="_blank" class="button grow">
          <Icon
            name="simple-icons:whatsapp"
            class="text-wedding-black min-w-6"
          />
          <span class="btn-label">{label}</span>
        </a>
      ))
    }
  </div>
</section>

<style>
  .button {
    @apply w-full md:w-1/3 items-center gap-2 bg-wedding-white bg-opacity-50 border border-wedding-secondary rounded-md uppercase flex justify-center py-4 tracking-wider hover:bg-wedding-secondary hover:text-wedding-white;
  }
</style>
