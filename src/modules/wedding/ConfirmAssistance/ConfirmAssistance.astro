---
import { GuestsForm } from "./GuestsForm";

const TITLE = "Nos encantaría tenerte con nosotros";
const SUBTITLE = "Confirmar asistencia";
const DESCRIPTION =
  "Selecciona tu nombre y da click en el botón de Confirmar Asistencia. Te redirigirá para enviar un mensaje de WhatsApp con tu confirmación.";
---

<section
  class="w-full flex flex-col md:flex-row items-center gap-8 md:justify-between"
>
  <div class="w-full md:w-1/2 flex flex-col gap-4">
    <span class="subtitle">{SUBTITLE}</span>
    <h2 class="title text-4xl md:text-6xl text-wedding-main appear">{TITLE}</h2>
    <p>{DESCRIPTION}</p>
  </div>

  <div
    class="w-full md:w-1/2 p-8 md:px-10 md:py-20 rounded-xl border border-wedding-secondary bg-wedding-white bg-opacity-50"
  >
    <GuestsForm client:load />
  </div>
</section>
