---
const TITLE = "Regalos";
const DESCRIPTION =
  "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.";
const BUTTONS = [
  { label: "Lista de Regalos", url: "#" },
  { label: "Regalo en efectivo", url: "#" },
];
---

<section class="flex flex-col md:items-center gap-4">
  <h2 class="title text-4xl md:text-6xl text-wedding-main appear">{TITLE}</h2>
  <p class="w-full md:w-2/3 md:text-center text-balance">
    {DESCRIPTION}
  </p>

  <div
    class="mt-4 w-full flex flex-col md:flex-row items-center justify-center gap-4"
  >
    {
      BUTTONS.map(({ label, url }) => (
        <a href={url} target="_blank" class="button grow">
          {label}
        </a>
      ))
    }
  </div>
</section>

<style>
  .button {
    @apply w-full md:w-1/3 bg-wedding-white bg-opacity-50 border border-wedding-secondary rounded-md uppercase flex justify-center py-4 tracking-wider hover:bg-wedding-secondary hover:text-wedding-white;
  }
</style>
