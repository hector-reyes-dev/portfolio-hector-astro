---
interface Props {
  date: Date;
  showIcon?: boolean;
}

const { date, showIcon = false } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(date);
---

<div class="flex items-center gap-1 text-sm text-gray dark:text-dark-text-secondary">
  {
    showIcon && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
        />
      </svg>
    )
  }
  <time datetime={date.toISOString()}>{formattedDate}</time>
</div>
