---
import { Image } from 'astro:assets'

interface Props {
  icon: string;
  title: string;
  description: string;
  subServices?: string[];
  color?: "red" | "purple";
}

const {
  icon,
  title,
  description,
  subServices = [],
} = Astro.props;
---

<article class="w-full sm:w-80 flex flex-col gap-4 sm:px-4 my-4">
  <Image width={64} height={64} src={icon} alt={title} />
  <h3 class="text-black text-xl font-bold">{title}</h3>
  <p class="text-base">{description}</p>
  <ul class="pl-8 list-disc text-base">
    {subServices.map((service) => <li>{service}</li>)}
  </ul>
</article>
